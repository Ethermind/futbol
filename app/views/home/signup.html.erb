<%= form_for @user do |f| %>
<fieldset>
	<legend>Signup</legend>
	<p>
		<%= f.label :name %> <br />
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email %> <br />
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :password %> <br />
		<%= f.password_field :password %>
	</p>
	<p>
		<%= f.label :password_confirmation %> <br />
		<%= f.password_field :password_confirmation %>
	</p>
	<p>
		<%= f.submit "Submit", :disable_with => "..." %>
	</p>
</fieldset>
<% end %>
<script language="javascript">
$(document).ready(function() {
  $('#user_name').focus();
});
</script>