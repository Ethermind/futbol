<!DOCTYPE html>
<html>
<head>
	<title>La cancha de tu hermana!</title>
	<%= stylesheet_link_tag "application", :media => "all" %>
	<%= stylesheet_link_tag "screen", :media => "screen, projection" %>
	<%= stylesheet_link_tag "print", :media => "print" %>
	<!–[if IE]><%= stylesheet_link_tag "ie", :media => "screen, projection" %><![endif]–>
	<%= csrf_meta_tags %>
  	<%= javascript_include_tag "application" %>
	<%= javascript_include_tag :defaults %>
</head>
<body>
	<div class="container">
		<div class="span-24 shade last">
			<div class="span-24 last">&nbsp;</div>
			<div class="span-2">&nbsp;</div>
			<div class="span-20">
				<%= render "/menu" %> 
			</div>
			<div class="span-2 last">&nbsp;</div>
			<div class="span-24 last">&nbsp;</div>
		</div>
		<% if SessionBag.get_error(flash) %>
		<div class="span-24 red last">
			&nbsp;&nbsp;
			<strong><%= SessionBag.get_error(flash) %></strong>
	    </div>
		<% end %>
		<div class="span-24 backwhite shadow last">&nbsp;</div>
		<div class="span-24 backwhite shadow last">
			<%= yield %>
		</div>
	</div>
</body>
</html>