<%= form_for @match do |f| %>
<fieldset>
	<legend>Edit Match</legend>
	<p>
		<%= f.label :name %> <br /> 
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.check_box :require_confirmation %> <%= f.label :require_confirmation %>
		<%= f.check_box :closed %> <%= f.label :closed %>
	</p>
	<p>
		<%= f.submit "Submit", :disable_with => "..." %>
	</p>
</fieldset>
<% end %>
<script language="javascript">
$(document).ready(function() {
  $('#match_name').focus();
});
</script>