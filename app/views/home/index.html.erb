<div class="span-24 last">
	<strong><%= "user: #{@user.name}" if @user %></strong>
	<%= link_to "Login", :controller => "home", :action => "login" if !@user %>
	<%= link_to "Signup", :controller => "home", :action => "signup" if !@user %> 
	<%= link_to "Logout", :controller => "home", :action => "logout" if @user %>
	<%= link_to "About", :controller => "home", :action => "about" %>
	<%= mail_to "luis.capra@gmail.com", "Feedback", :encode => "javascript" if @user && !@user.admin? %>			
	
	<%= link_to "Users", users_list_path if @user && @user.admin? %>
	<%= link_to "New Match", :controller => "home", :action => "new_match" if @user && @user.admin? %>
		
</div>



<br />
<br />

<% if @match %>
<% position = 0 %>
<table border="0" cellspacing="0" cellpadding="0">
	<caption>
		<em>Last match status - "<b><%= @match.name %></b>"</em>
		<br />
		<%= link_to "Add me!", :controller => "home", :action => "add_user_to_match" if @user && !@player %>
	</caption>
	<thead>
		<tr>
			<th class="span-4">Position</th>
			<th class="span-4">Name</th>
			<th class="span-4">Status</th>
			<th class="span-4 last">Actions</th>
		</tr>
	</thead>
	<tfoot>
		<tr>
			<td colspan="2">Total: <%= "#{@match.players.count}" %></td>
		</tr>
	</tfoot>
	<tbody>
		<% @match.players.each do |p| %>
		<% position += 1 %>
				<% @player = p %>
		<tr>
			<td><%= position %></td>
			<td><%= p.user.name %></td>
			<td>
				<%= "CONFIRMED" if p.confirm %> 
				<%= "CANCELLED" if p.cancel %> 
				<%= "NEW" if !p.confirm && !p.cancel %> 
			</td>
			<td>
				<% if (!p.confirm && !p.cancel) || (@user && @user.admin?) %>
				<%= link_to "Confirm", home_confirm_player_to_match_path(:player => p) if @user && !p.confirm %>
				<%= link_to "Cancel", home_cancel_player_to_match_path(:player => p) if @user && !p.cancel %>
				<% else %>
					NONE
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<% end %>


