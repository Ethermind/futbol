<div class="span-3">&nbsp;</div>
<div class="span-18">
	<%= form_for @user do |f| %>
	<fieldset>
		<legend>Profile for [<%= @user.name %>]</legend>
		<p>
			<%= f.label :email %> <br />
			<%= f.text_field :email %>
		</p>
		<p>
			<%= f.label :password %> <br />
			<%= f.password_field :password %>
		</p>
		<p>
			<%= f.label :password_confirmation %> <br />
			<%= f.password_field :password_confirmation %>
		</p>
		<p>
			<%= f.submit "Submit", :disable_with => "..." %>
		</p>
	</fieldset>
	<% end %>
</div>
<div class="span-3 last">&nbsp;</div>	
<script language="javascript">
$(document).ready(function() {
  $('#user_email').focus();
});
</script>